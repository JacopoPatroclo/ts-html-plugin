    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@arthurfiorette/prettier-config": "^1.0.9",
    "@types/node": "^20.7.1",
    "@types/yargs": "^17.0.26",
    "prettier": "^3.0.3",
    "self": "file:."
  },
  "peerDependencies": {
    "@kitajs/html": ">=2",
    "typescript": ">=5"
  },
  "packageManager": "pnpm@8.7.5"
}
